<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/input_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/title_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/last_name"
            android:textColor="@color/medium_dark_gray"
            android:textSize="13sp"
            android:visibility="gone" />

        <jp.stage.stagelovemaker.views.ExtendedEditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_input_text"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/icon_remove_img"
            android:background="@android:color/transparent"
            android:maxLength="50"
            android:maxLines="1"
            android:textColor="@color/very_dark_gray"
            android:textSize="16.5sp" />

        <ImageView
            android:id="@+id/icon_remove_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/line_maintabbar_view"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="6.8dp"
            android:layout_marginLeft="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitEnd"
            android:src="@mipmap/ic_remove_gray" />

        <View
            android:id="@+id/line_maintabbar_view"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@id/edit_text"
            android:layout_marginBottom="10.3dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/issuse_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_maintabbar_view"
            android:layout_marginTop="-8dp"
            android:textColor="@color/colorAccent"
            android:textSize="10sp"
            android:visibility="gone" />
    </RelativeLayout>
</merge>