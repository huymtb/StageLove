<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="370dp">

                <jp.stage.stagelovemaker.views.UserImageSlide
                    android:id="@+id/user_image_slide"
                    android:layout_width="match_parent"
                    android:layout_height="370dp" />

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/iv_back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_down"
                    app:siBorderColor="@android:color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_name"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_name"
                    fontPath="fonts/proximanovasoft-semibold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="Nathalia,"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/tv_age"
                    fontPath="fonts/proximanovasoft-semibold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_name"
                    android:text="19"
                    android:textSize="20sp"
                    tools:ignore="MissingPrefix" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/icon_three_dot" />
            </RelativeLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/iv_work"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_column="0"
                    android:layout_marginLeft="16dp"
                    android:layout_row="0"
                    android:src="@mipmap/ic_work" />

                <TextView
                    android:id="@+id/tv_work"
                    fontPath="fonts/proximanovasoft-regular.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_row="0"
                    android:ellipsize="marquee"
                    android:text="@string/dont_know"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    tools:ignore="MissingPrefix" />

                <ImageView
                    android:id="@+id/iv_school"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_column="0"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_row="1"
                    android:src="@mipmap/ic_school" />

                <TextView
                    android:id="@+id/tv_school"
                    fontPath="fonts/proximanovasoft-regular.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_row="1"
                    android:ellipsize="marquee"
                    android:text="@string/dont_know"
                    android:textSize="16sp"
                    tools:ignore="MissingPrefix" />

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_column="0"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_row="2"
                    android:src="@mipmap/ic_marker" />

                <TextView
                    android:id="@+id/tv_location"
                    fontPath="fonts/proximanovasoft-regular.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_row="2"
                    android:ellipsize="marquee"
                    android:text="@string/dont_know"
                    android:textSize="16sp"
                    tools:ignore="MissingPrefix" />
            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="17dp"
                android:background="@color/dark_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20.5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:text="@string/about_me"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:lineSpacingExtra="5sp"
                    android:textColor="@color/mostly_black"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:id="@+id/line_interest"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="16dp"
                android:background="@color/dark_gray" />

            <RelativeLayout
                android:id="@+id/instagram_profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/instagram_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20.5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:text="@string/instagram"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

                <jp.stage.stagelovemaker.views.PageControl
                    android:id="@+id/instagram_pagecontrol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/instagram_txt"
                    android:layout_marginRight="@dimen/form_margin" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/instagram_pagecontrol"
                    android:layout_marginBottom="@dimen/form_margin"
                    android:layout_marginLeft="@dimen/form_margin"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="5dp" />

                <View
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/view_pager"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/view_pager"
                    android:background="@android:color/white" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_feeling_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <at.markushi.ui.CircleButton
            android:id="@+id/circleButtonClose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_close"
            app:cb_color="#ffddde"
            app:cb_pressedRingWidth="20dp" />

        <at.markushi.ui.CircleButton
            android:id="@+id/circleButtonHeart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingTop="6dp"
            android:src="@drawable/ic_heart"
            app:cb_color="#dcfff5"
            app:cb_pressedRingWidth="20dp" />

        <at.markushi.ui.CircleButton
            android:id="@+id/circleButtonStar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_star"
            app:cb_color="#ddefff"
            app:cb_pressedRingWidth="20dp" />
    </LinearLayout>
</RelativeLayout>