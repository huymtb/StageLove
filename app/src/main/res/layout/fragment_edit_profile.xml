<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".activity.MainActivity">

    <jp.stage.stagelovemaker.views.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10ssp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5ssp"
                    android:layout_weight="2">

                    <com.github.siyamed.shapeimageview.RoundedImageView
                        android:id="@+id/imageView_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/draw_image_view_bg"
                        app:siBorderColor="@android:color/transparent"
                        app:siBorderWidth="0dp"
                        app:siRadius="@dimen/_10ssp"
                        app:siSquare="true" />

                    <TextView
                        fontPath="fonts/proximanovasoft-semibold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5ssp"
                        android:text="1"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_20ssp"
                        tools:ignore="MissingPrefix" />

                    <ImageView
                        android:id="@+id/add_imageView_1"
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/draw_circle_white_bg"
                        android:src="@drawable/add_image" />

                    <ImageView
                        android:id="@+id/remove_imageView_1"
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/draw_circle_white_bg"
                        android:src="@drawable/delete_image"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/relative_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.github.siyamed.shapeimageview.RoundedImageView
                            android:id="@+id/imageView_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_8ssp"
                            android:layout_marginStart="@dimen/_5ssp"
                            android:background="@drawable/draw_image_view_bg"
                            android:scaleType="centerCrop"
                            app:siBorderColor="@android:color/transparent"
                            app:siBorderWidth="0dp"
                            app:siRadius="@dimen/_10ssp"
                            app:siSquare="true" />

                        <TextView
                            fontPath="fonts/proximanovasoft-semibold.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10ssp"
                            android:layout_marginTop="@dimen/_5ssp"
                            android:text="2"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_20ssp"
                            tools:ignore="MissingPrefix" />

                        <ImageView
                            android:id="@+id/add_imageView_2"
                            android:layout_width="@dimen/_20ssp"
                            android:layout_height="@dimen/_20ssp"
                            android:layout_alignBottom="@+id/imageView_2"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/draw_circle_white_bg"
                            android:src="@drawable/add_image" />

                        <ImageView
                            android:id="@+id/remove_imageView_2"
                            android:layout_width="@dimen/_20ssp"
                            android:layout_height="@dimen/_20ssp"
                            android:layout_alignBottom="@+id/imageView_2"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/draw_circle_white_bg"
                            android:src="@drawable/delete_image"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relative_1">

                        <com.github.siyamed.shapeimageview.RoundedImageView
                            android:id="@+id/imageView_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5ssp"
                            android:background="@drawable/draw_image_view_bg"
                            android:scaleType="centerCrop"
                            app:siBorderColor="@android:color/transparent"
                            app:siBorderWidth="0dp"
                            app:siRadius="@dimen/_10ssp"
                            app:siSquare="true" />

                        <TextView
                            fontPath="fonts/proximanovasoft-semibold.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10ssp"
                            android:layout_marginTop="@dimen/_10ssp"
                            android:text="3"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_20ssp"
                            tools:ignore="MissingPrefix" />

                        <ImageView
                            android:id="@+id/add_imageView_3"
                            android:layout_width="@dimen/_20ssp"
                            android:layout_height="@dimen/_20ssp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/draw_circle_white_bg"
                            android:src="@drawable/add_image" />

                        <ImageView
                            android:id="@+id/remove_imageView_3"
                            android:layout_width="@dimen/_20ssp"
                            android:layout_height="@dimen/_20ssp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/draw_circle_white_bg"
                            android:src="@drawable/delete_image"
                            android:visibility="gone" />
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10ssp"
                android:layout_marginStart="@dimen/_10ssp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5ssp"
                    android:layout_weight="1">

                    <com.github.siyamed.shapeimageview.RoundedImageView
                        android:id="@+id/imageView_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/draw_image_view_bg"
                        android:scaleType="centerCrop"
                        app:siBorderColor="@android:color/transparent"
                        app:siBorderWidth="0dp"
                        app:siRadius="@dimen/_10ssp"
                        app:siSquare="true" />

                    <TextView
                        fontPath="fonts/proximanovasoft-semibold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6ssp"
                        android:layout_marginTop="@dimen/_5ssp"
                        android:text="6"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_20ssp"
                        tools:ignore="MissingPrefix" />

                    <ImageView
                        android:id="@+id/add_imageView_6"
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/draw_circle_white_bg"
                        android:src="@drawable/add_image" />

                    <ImageView
                        android:id="@+id/remove_imageView_6"
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/draw_circle_white_bg"
                        android:src="@drawable/delete_image"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5ssp"
                    android:layout_marginStart="@dimen/_5ssp"
                    android:layout_weight="1">

                    <com.github.siyamed.shapeimageview.RoundedImageView
                        android:id="@+id/imageView_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/draw_image_view_bg"
                        android:scaleType="centerCrop"
                        app:siBorderColor="@android:color/transparent"
                        app:siBorderWidth="0dp"
                        app:siRadius="@dimen/_10ssp"
                        app:siSquare="true" />

                    <TextView
                        fontPath="fonts/proximanovasoft-semibold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6ssp"
                        android:layout_marginTop="@dimen/_5ssp"
                        android:text="5"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_20ssp"
                        tools:ignore="MissingPrefix" />

                    <ImageView
                        android:id="@+id/add_imageView_5"
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/draw_circle_white_bg"
                        android:src="@drawable/add_image" />

                    <ImageView
                        android:id="@+id/remove_imageView_5"
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/draw_circle_white_bg"
                        android:src="@drawable/delete_image"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5ssp"
                    android:layout_weight="1">

                    <com.github.siyamed.shapeimageview.RoundedImageView
                        android:id="@+id/imageView_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/draw_image_view_bg"
                        android:scaleType="centerCrop"
                        app:siBorderColor="@android:color/transparent"
                        app:siBorderWidth="0dp"
                        app:siRadius="@dimen/_10ssp"
                        app:siSquare="true" />

                    <TextView
                        fontPath="fonts/proximanovasoft-semibold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/remove_imageView_4"
                        android:layout_marginStart="@dimen/_6ssp"
                        android:layout_marginTop="@dimen/_5ssp"
                        android:layout_toEndOf="@+id/remove_imageView_4"
                        android:text="4"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_20ssp"
                        tools:ignore="MissingPrefix" />

                    <ImageView
                        android:id="@+id/add_imageView_4"
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/draw_circle_white_bg"
                        android:src="@drawable/add_image" />

                    <ImageView
                        android:id="@+id/remove_imageView_4"
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/draw_circle_white_bg"
                        android:src="@drawable/delete_image"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="@color/dark_gray" />

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/profile"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3ssp"
                android:background="@drawable/draw_white_bg">

                <jp.stage.stagelovemaker.views.FormInputText
                    android:id="@+id/tv_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3ssp"
                android:background="@drawable/draw_white_bg">

                <jp.stage.stagelovemaker.views.FormInputText
                    android:id="@+id/tv_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/_3ssp"
                android:background="@drawable/draw_white_bg"
                android:orientation="horizontal">

                <jp.stage.stagelovemaker.views.FormInputCombobox
                    android:id="@+id/tv_birthday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1" />

                <jp.stage.stagelovemaker.views.FormInputCombobox
                    android:id="@+id/tv_gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3ssp"
                android:background="@drawable/draw_white_bg">

                <jp.stage.stagelovemaker.views.FormInputText
                    android:id="@+id/tv_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3ssp"
                android:background="@drawable/draw_white_bg">

                <jp.stage.stagelovemaker.views.FormInputText
                    android:id="@+id/tv_current_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3ssp"
                android:background="@drawable/draw_white_bg">

                <jp.stage.stagelovemaker.views.FormInputText
                    android:id="@+id/tv_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="@dimen/_3ssp"
                android:background="@drawable/draw_white_bg">

                <jp.stage.stagelovemaker.views.TitleTextView
                    android:id="@+id/tv_instagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layout_cropview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/title_cropview"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/back_txt_cropview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/done_txt_cropview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <com.theartofdev.edmodo.cropper.CropImageView
            android:id="@+id/cropImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/title_cropview"
            android:layout_marginTop="0.5dp"
            android:background="#ff424242" />


        <ImageView
            android:id="@+id/rotate_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/circle_button"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_rotate_right" />
    </RelativeLayout>
</RelativeLayout>
